<Task ID="20011" Memo="c公告栏c又有了新的悬赏令，快去勇士广场看看。" TargetMap="11202">
<BoardInfo PageType="1" Title="王国悬赏令②" Content="【麦田村•海底洞穴】出现大量黑化的【钢姆】，给村民生活带来很多困扰。谁能前去净化10只【钢姆】，摩尔王将给予500星豆奖励"></BoardInfo>   	
	<Procedure> 
		<Step ID="1" ParentList="0" ParentCost="0" >
    			<Event Memo="c公告栏c又有了新的悬赏令，快去勇士广场看看。" TargetMap="11202">
  				<Trigger>
					<Item Type="BOARD_ACCEPT" />
				</Trigger>
    				<Action Type="COMMAND" Command="NOTHING" /> 
    			</Event>
		</Step>

  		<Step ID="2" ParentList="1" ParentCost="1" >
    			<Event Memo="c传教士协会c派出了c塞莲c去麦田村帮助治疗受伤的村民。先去麦田村向c塞莲c了解一下情况。" TargetMap="11401">
  				<Trigger>
					<Item Type="NPC_OPTION" MapID="11401" ObjID="510" TaskOption="黑化的钢姆" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="510" ImageID="1" Info="你是勇士协会的【@nick】？听说你曾经挑战过下水道的【普豆泥王】！你能来帮忙，真是太好了。" />
					<Msg NpcID="510" ImageID="1" Info="钢姆是生活在村子北边【海底洞穴】的精灵，最近很多钢姆被【黑化】了，进入【海底洞穴】的村民都被【钢姆】打伤。" />
					<Msg NpcID="510" ImageID="1" Info="请你去海底洞穴净化10只钢姆吧！如果你体力不支，记得到我这里，我会帮你治疗，千万不要勉强^^。" />
					<Option Info="好的！" />
				</Action>
    		</Event>
		</Step>

		<Step ID="3" ParentList="2" ParentCost="1" >
			<Condition>
				<Battle ID="21" Count="10" />
			</Condition>
    		<Event ConditionType="IN" Memo="成功净化10只c钢姆c！把这个好消息告诉c塞莲c姐姐。" TargetMap="11401">
  				<Trigger>
					<Item Type="NPC_OPTION" MapID="11401" ObjID="510" TaskOption="已经净化完毕" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="510" ImageID="1" Info="辛苦你了，不愧是勇士协会的摩尔，这么快就净化了10只黑化【钢姆】。" />
					<Msg NpcID="510" ImageID="1" Info="【@nick】帮我去告诉【铃】大人，为了防止黑化精灵伤害摩尔的事情再度发生，我要在麦田村再待上一段时间，谢谢啦^^。" />
					<Option Info="嘿嘿" />
				</Action>
    		</Event>
			<Event ConditionType="OUT" Memo="任务目标是在海底洞穴净化10只c钢姆c。" TargetMap="21401">
				<Trigger>
					<Item Type="NPC_OPTION" MapID="11401" ObjID="510" TaskOption="黑化的【钢姆】" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="510" ImageID="1" Info="【@nick】，拜托你了……" />
					<Option Info="好的！" />
				</Action>
			</Event>
		</Step>
		
		<Step ID="4" ParentList="3" ParentCost="1" NotKeyStep="Y">
			<Condition>
				<Item ID="180044" Count="1" />
			</Condition>
    		<Event ConditionType="OUT" Memo="" TargetMap="11401">
  				<Trigger>
					<Item Type="NPC_OPTION" MapID="11401" ObjID="510" TaskOption="塞莲姐姐再见！" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="510" ImageID="1" Info="拜托你啦，去找【铃】大人吧。" />
					<Option Info="谢谢" />
				</Action>
    		</Event>
			<Event ConditionType="IN" Memo="" TargetMap="11401">
				<Trigger>
					<Item Type="NPC_OPTION" MapID="11401" ObjID="510" TaskOption="黑化的【钢姆】" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="510" ImageID="1" Info="你手上的那个是？？" />
					<Option Info="钢姆的角" />
				</Action>
				<Action Type="TALK">
					<Msg NpcID="510" ImageID="1" Info="这种颜色的从来没有见过呢……对了，【尼康康餐厅】最近来了2个精灵学者，你把这个角带给他们看看。" />
					<Option Info="好的！" />
				</Action>
			</Event>
		</Step>	

		<Step ID="5" ParentList="3" ParentCost="1">
			<Event Memo="先去女神大圣堂找c大祭司·铃c，告诉她麦田村的事。" TargetMap="11217">
				<Trigger>
					<Item Type="NPC_OPTION" MapID="11217" ObjID="102" TaskOption="塞莲的报告" /> 
				</Trigger>
					<Action Type="TALK">
						<Msg NpcID="102" ImageID="1" Info="嗯，我知道了，谢谢你啊，勇敢的小摩尔。\n快点回公告栏去领取奖励吧。" /> 
						<Option Info="好的" /> 
					</Action>
			</Event>
		</Step>
		
		<Step ID="6" ParentList="5" ParentCost="1" >
    		<Event Memo="完成任务，去c公告栏c领取奖赏吧。" TargetMap="11202">
  				<Trigger>
					<Item Type="BOARD_SUBMIT" />
					<Item Type="NPC_OPTION" MapID="11202" ObjID="15" TaskOption="任务完成" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="15" ImageID="1" Info="这件事你干的很漂亮嘛！" />
					<Option Info="嘿嘿" TalkOver="Y"/>
				</Action>
				<Action Type="MOVIE" Url="TaskAcceptModule" MapLevel="TASK" Pos="0,0" IsModule="Y" />
    			<Action Type="TALK">
					<Msg NpcID="15" ImageID="1" Info="这些是你的赏星奖励，可恶太令人羡慕了……都拿去吧！好好使用吧！" />
					<Option Info="嗯！" />
				</Action>
			</Event>
		</Step>

		<Step ID="7" ParentList="4" ParentCost="1" NotKeyStep="Y">
    			<Event Memo="" TargetMap="11404">
  				<Trigger>
					<Item Type="NPC_OPTION" MapID="11404" ObjID="42" TaskOption="钢姆的角" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="42" ImageID="1" Info="这种颜色的钢姆从来没有见过!!这...这...这一定是精灵学界的大发现！" />
					<Msg NpcID="42" ImageID="7" Info="这只角送给我吧，我要好好研究一下！" />
					<Option Info="好的~" />
				</Action>
				<Action Type="TALK">
					<Msg NpcID="42" ImageID="7" Info="太感谢了，这些东西送给你！" />
					<Option Info="谢谢^^" />
				</Action>
    			</Event>
		</Step>		
	</Procedure>
</Task>

 
